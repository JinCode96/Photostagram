<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.photostagram.dao.BoardDAO">

    <select id="selectMember" resultType="kr.co.photostagram.vo.MemberVO">
        SELECT * FROM `user` WHERE `username`=#{username};
    </select>

    <select id="selectPost" resultType="kr.co.photostagram.vo.BoardVO">
        SELECT * FROM `post` as a
            JOIN `user` as b
            ON a.`user_no` = b.`no`
            WHERE a.`no`=#{no};
    </select>

    <select id="selectContent" resultType="kr.co.photostagram.vo.BoardVO">
        SELECT * FROM `post` as a
        JOIN `user` as b
        ON a.`user_no` = b.`no`
        WHERE a.`no`=#{no};
    </select>

</mapper>